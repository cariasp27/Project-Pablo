  "dependencies": {
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "moment": "^2.29.2",
    "mongoose": "^5.8.11",
    "nodemon": "^2.0.2",
    "react-moment": "^0.9.7"
  }
